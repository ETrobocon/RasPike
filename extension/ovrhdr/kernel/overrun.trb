#
#		オーバランハンドラ機能の生成スクリプト
#

#
#  オーバランハンドラがサポートされていない場合のエラーチェック
#
if !$TOPPERS_SUPPORT_OVRHDR
  if $cfgData.has_key?(:DEF_OVR)
    error("E_NOSPT: DEF_OVR is not supported on this target")
  end
end

#
#  オーバランハンドラ機能に関する情報の生成
#
$kernelCfgC.comment_header("Overrun Handler Functions")

if $cfgData[:DEF_OVR].size() > 0
  # 静的API「DEF_OVR」が複数ある（E_OBJ）［NGKI2619］
  if $cfgData[:DEF_OVR].size() > 1
    error("E_OBJ: too many DEF_OVR")
  end

  params = $cfgData[:DEF_OVR][1]

  # ovratrが無効の場合（E_RSATR）［NGKI2612］
  #（TA_NULLでない場合）
  if params[:ovratr] != $TA_NULL
    error_illegal("E_RSATR", params, :ovratr)
  end

  #	オーバランハンドラ初期化ブロックの生成
  $kernelCfgC.add("const OVRINIB _kernel_ovrinib[1] = {")
  $kernelCfgC.add("\t{ (#{params[:ovratr]}), (OVRHDR)(#{params[:ovrhdr]}) }")
  $kernelCfgC.add2("};")

  # オーバランハンドラ機能初期化関数の追加
  $initializeFunctions.push("_kernel_initialize_overrun();")
else
  $kernelCfgC.add2("TOPPERS_EMPTY_LABEL(const OVRINIB, _kernel_ovrinib);")
end
